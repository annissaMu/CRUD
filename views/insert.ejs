
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Insert - CS304 CRUD Assignment</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    </head>
  <body>
    <%- include("partials/navbar.ejs") %>

    <% if (messages.error) { %>
      <div id="errors">
        <% messages.error.forEach( msg => {%>
        <p><%= msg %></p>
        <% }) %>
      </div>
      <% } %>
    
      <% if (messages.info) { %>
      <div id="info">
        <% messages.info.forEach( msg => {%>
        <p><%= msg %></p>
        <% }) %>
      </div>
      <% } %>
    </div>


    <div id="content">

    <h1>Insert Movie</h1>

    <form method="post" action="/insert/">
      <fieldset>
        <legend>Movie Data</legend>
        <table>
          <tr>
              <td><label for="movieTt" accesskey="i">(i) Movie ID/TT:</label></td>
              <td><input id="movieTt" type="text" name="movieTt"
                         value="" placeholder="123"></td>
          </tr>
          <tr>
            <td><label for="movieTitle" accesskey="t">(t) Movie Title:</label></td>
            <td><input id="movieTitle" type="text" name="movieTitle"
                       value="" placeholder="Hamlet"></td>
          </tr>
          <tr>
            <td>
              <label for="movieRelease" accesskey="r">(r) Movie Release Year:</label>
            </td>
            <td><input id="movieRelease" type="text" name="movieRelease"
                       value="" placeholder="1948"></td>
          </tr>
        </table>
      </fieldset>

      <p><input type="submit" value="Insert Movie"></p>
    </form>

    </div>
        <!-- load local js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/cs304node/crud/main.js"></script>

  </body>
</html>
